<style>
    .about-page {
        background-color: #f7f7f7;
        padding: 50px 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
        text-align: center;
    }

    h2 {
        font-size: 1.8rem;
        color: #007bff;
        margin-bottom: 10px;
    }

    .about-section {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 20px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .about-section ul {
        list-style-type: none;
        padding: 0;
    }

    .about-section li {
        font-size: 1.1rem;
        margin: 5px 0;
    }

    .about-section p {
        font-size: 1rem;
        line-height: 1.6;
        color: #555;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .about-page {
            padding: 20px 0;
        }

        h1 {
            font-size: 2rem;
        }

        h2 {
            font-size: 1.6rem;
        }

        .about-section p {
            font-size: 0.9rem;
        }
    }

    @media (max-width: 480px) {
        .container {
            padding: 0 10px;
        }

        h1 {
            font-size: 1.8rem;
        }

        h2 {
            font-size: 1.4rem;
        }

        .about-section p {
            font-size: 0.85rem;
        }
    }
</style>
