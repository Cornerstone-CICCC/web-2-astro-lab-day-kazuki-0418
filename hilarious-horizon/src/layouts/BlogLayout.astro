---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title, description, content } = Astro.props;
---

<Header />

<main class="blog-layout">
    <div class="container">
        <section class="blog-hero">
            <h1>{title}</h1>
            <p class="description">{description}</p>
        </section>

        <section class="blog-content">
            {content}
        </section>
    </div>
</main>

<Footer />

<style>
    .blog-layout {
        background-color: #f7f7f7;
        padding: 50px 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .blog-hero {
        text-align: center;
        margin-bottom: 50px;
    }

    .blog-hero h1 {
        font-size: 2.5rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }

    .description {
        font-size: 1.2rem;
        color: #666;
        max-width: 800px;
        margin: 0 auto;
    }

    .blog-content {
        margin-top: 40px;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .blog-hero h1 {
            font-size: 2rem;
        }

        .description {
            font-size: 1rem;
        }
    }

    @media (max-width: 480px) {
        .container {
            padding: 0 10px;
        }

        .blog-hero h1 {
            font-size: 1.8rem;
        }

        .description {
            font-size: 0.9rem;
        }
    }
</style>
